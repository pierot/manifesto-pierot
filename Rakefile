require 'rubygems'
require 'rake'

begin
  require 'jeweler'
  Jeweler::Tasks.new do |gem|
    gem.name = "manifesto-pierot"
    gem.summary = %Q{Manifesto is a Ruby library that dynamically generates an HTML5 cache manifest. Forked by pierot}
    gem.description = %Q{Dynamically generates an HTML5 cache manifest from the contents of a directory}
    gem.email = "john@johntopley.com; pieter@wellconsidered.be"
    gem.homepage = "http://github.com/pierot/manifesto-pierot"
    gem.authors = ["John Topley","Nasir Jamal"]
  end
  Jeweler::GemcutterTasks.new
rescue LoadError
  puts "Jeweler (or a dependency) not available. Install it with: gem install jeweler"
end